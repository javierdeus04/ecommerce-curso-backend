<article>
    <h1>Restaurar contraseña</h1>
    <form action="/api/users/recovery-password" method="post">
        <input type="hidden" name="token" value="{{token}}">
        <input id="password-input" type="password" name="password" placeholder="Nueva contraseña" required>
        <input id="submit-button" type="submit" value="Enviar">
        <br>
        <a href="/login">Iniciar sesion</a>
    </form>
</article>