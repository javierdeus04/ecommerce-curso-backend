<h1>Nuevo producto</h1>
<article>
    <form id="new-product-form" action="/api/products" method="post" enctype="multipart/form-data">
        <input id="title-input" type="text" name="title" placeholder="Titulo">
        <input id="category-input" type="text" name="category" placeholder="Categoria">
        <input id="description-input" type="text" name="description" placeholder="Descripcion">
        <input id="price-input" type="number" name="price" placeholder="Precio">
        <input id="code-input" type="text" name="code" placeholder="Codigo">
        <input id="stock-input" type="number" name="stock" placeholder="Stock">
        <input type="file" name="thumbnail">
        <input id="new-product-button" type="submit" value="Agregar producto">
        <br>
    </form>
</article>
</article>

