<h1>MoviEcommerce</h1>

<article>
    <header><b>Perfil de usuario</b></header>
    <ul>
        <li>Nombre: {{user.first_name}}</li>
        <li>Apellido: {{user.last_name}}</li>
        <li>Email: {{user.email}}</li>
        <li>Edad: {{user.age}}</li>
        <li>
            <details>
                <summary>Ordenes de compra</summary>
                {{#each user.orders}}
                <ul>
                    <li>{{this}}</li>
                </ul>
                {{/each}}
            </details>
        </li>
        <li>
            <details>
                <summary>Tickets</summary>
                {{#each user.tickets}}
